{{cfg.hostname}} {
  tls meade@themelio.org

  {{#if cfg.gzip.enabled ~}}
  gzip
  {{/if ~}}

  header / {
    Strict-Transport-Security "max-age=15768000"
    X-XSS-Protection "1; mode=block"
    X-Content-Type-Options "nosniff"
    X-Frame-Options "DENY"
  }

  proxy / localhost:9090 {
    transparent
    policy round_robin
  }
}

www.prometheus.themelio.org {
  redir 301 {
    https://prometheus.themelio.org{uri}
  }
}